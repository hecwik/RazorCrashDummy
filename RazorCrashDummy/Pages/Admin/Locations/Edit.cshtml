

@page
@model RazorCrashDummy.Pages.Admin.Locations.EditModel

<form method="post">
    <input hidden asp-for="Location.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
        <h2 class="text-primary pl-3">Edit Location</h2>
        <hr/>
    </div>
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="Location.Id"></label>
        <input asp-for="Location.Id" class="form-control" />
        <span asp-validation-for="Location.Id" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Location.Name" ></label>
        <input asp-for="Location.Name" class="form-control" />
        <span asp-validation-for="Location.Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" style="width:150px;">Update</button>
    <a asp-page="Index" class="btn btn-secondary" style="width:150px;">Back to list</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}