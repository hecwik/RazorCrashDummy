

@page
@model RazorCrashDummy.Pages.Admin.Locations.IndexModel



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Location List</h2>
        </div>
            <div class="col-6">
                <a asp-page="Create" class="btn btn-primary" >
                    <i class="bi bi-plus-square"></i> &nbsp; Create New Location
                </a>
            </div>
    </div>

    <br/><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.LocationsList)
            {
                <tr>
                    <td width="30%">@obj.Id</td>
                    <td width="30%">@obj.Name</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                        <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3-fill"></i>
                        </a>
                        </div>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>

</div>
