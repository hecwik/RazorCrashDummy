@page
@model RazorCrashDummy.Pages.Admin.Shifts.IndexModel


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Shift List</h2>
        </div>
            <div class="col-6">
                <a asp-page="Create" class="btn btn-primary" >
                    <i class="bi bi-plus-square"></i> &nbsp; Add Shift
                </a>
            </div>
    </div>

    <br/><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Starting time
                </th>
                <th>
                    End time
                </th>
                <th>
                    Added
                </th>
                <th>
                    User
                </th>
                <th>
                    Location
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.ShiftList)
            {
                <tr>
                    <td width="10%">@obj.Id</td>
                    <td width="10%">@obj.StartTime.ToString()</td>
                    <td width="20%">@obj.EndTime.ToString()</td>
                    <td width="20%">@obj.Added.ToString()</td>
                    <td width="20%">@RazorCrashDummy.Pages.Admin.Shifts.IndexModel.FindUser(obj.UserId)</td>
                    <td width="20%">@RazorCrashDummy.Pages.Admin.Shifts.IndexModel.FindLocation(obj.LocationId)</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                        <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3-fill"></i>
                        </a>
                        </div>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>

</div>
